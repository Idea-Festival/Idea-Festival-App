<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.SignupActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@color/black"
        android:fontFamily="@font/cafe24ssurround"
        android:gravity="center"
        android:text="비밀번호 찾기"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/find_email"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:ems="11"
        android:gravity="center"
        android:hint="E-mail을 입력하세요"
        android:inputType="text"
        android:textAppearance="@style/id"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letter"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:src="@drawable/letter"
        app:layout_constraintBottom_toBottomOf="@+id/find_email"
        app:layout_constraintEnd_toStartOf="@+id/find_email"
        app:layout_constraintTop_toTopOf="@+id/find_email"
        app:tint="@color/black" />

    <View
        android:id="@+id/find_info_btn"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/btn_design"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_email" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24ssurround"
        android:text="비밀번호 찾기"
        app:layout_constraintBottom_toBottomOf="@+id/find_info_btn"
        app:layout_constraintEnd_toEndOf="@+id/find_info_btn"
        app:layout_constraintStart_toStartOf="@+id/find_info_btn"
        app:layout_constraintTop_toTopOf="@+id/find_info_btn" />

    <View
        android:id="@+id/cancel_btn"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24ssurround"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="@+id/cancel_btn"
        app:layout_constraintEnd_toEndOf="@+id/cancel_btn"
        app:layout_constraintStart_toStartOf="@+id/cancel_btn"
        app:layout_constraintTop_toTopOf="@+id/cancel_btn" />

