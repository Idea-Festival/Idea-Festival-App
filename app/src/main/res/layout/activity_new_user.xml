<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.NewUserActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@color/black"
        android:fontFamily="@font/cafe24ssurround"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:ems="11"
        android:gravity="center"
        android:hint="이름을 입력하세요"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginTop="83dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toStartOf="@+id/new_name"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:tint="@color/black" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:ems="11"
        android:gravity="center"
        android:hint="E-mail을 입력하세요"
        android:inputType="text"
        android:textAppearance="@style/id"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_name"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letter"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="31dp"
        android:src="@drawable/letter"
        app:layout_constraintEnd_toStartOf="@+id/new_email"
        app:layout_constraintTop_toBottomOf="@+id/new_name"
        app:tint="@color/black" />

    <EditText
        android:id="@+id/new_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:ems="11"
        android:gravity="center"
        android:hint="아이디를 입력하세요"
        android:inputType="text"
        android:textAppearance="@style/id"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_email"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letter1"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/hole"
        app:layout_constraintEnd_toStartOf="@+id/new_id"
        app:layout_constraintTop_toTopOf="@+id/new_id"
        app:tint="@color/black" />

    <EditText
        android:id="@+id/new_pw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:ems="11"
        android:gravity="center"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:textAppearance="@style/id"
        android:textFontWeight="400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_id"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/letter2"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/lock"
        app:layout_constraintEnd_toStartOf="@+id/new_pw"
        app:layout_constraintTop_toBottomOf="@+id/new_id"
        app:tint="@color/black" />

    <View
        android:id="@+id/create_user_btn"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_pw" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="70dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="회원가입"
        android:fontFamily="@font/cafe24ssurround"
        app:layout_constraintBottom_toBottomOf="@+id/create_user_btn"
        app:layout_constraintEnd_toEndOf="@+id/create_user_btn"
        app:layout_constraintStart_toStartOf="@+id/create_user_btn"
        app:layout_constraintTop_toTopOf="@+id/create_user_btn" />

    <View
        android:id="@+id/add_cancel_button"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_user_btn" />

    <TextView
        android:id="@+id/some_id1"
        android:layout_width="70dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="취소"
        android:fontFamily="@font/cafe24ssurround"
        app:layout_constraintBottom_toBottomOf="@+id/add_cancel_button"
        app:layout_constraintEnd_toEndOf="@+id/add_cancel_button"
        app:layout_constraintStart_toStartOf="@+id/add_cancel_button"
        app:layout_constraintTop_toTopOf="@+id/add_cancel_button" />

    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/cafe24ssurround"
        android:text="※ 이름, 이메일, 아이디, 비밀번호는 필수 입력사항입니다."
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_user_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>